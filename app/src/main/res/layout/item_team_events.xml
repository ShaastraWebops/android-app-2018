<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_team"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_teamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/ibt_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_expand_more_black_24dp"/>

            <ImageButton
                android:id="@+id/ibt_less"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:visibility="gone"
                android:src="@drawable/ic_expand_less_black_24dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_teamName"
                android:visibility="gone"
                android:id="@+id/table_team_reg">

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="Event Name"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="16sp"
                        />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/tv_team_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="5dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/table_team_reg"
                android:text="No Registrations Yet" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
