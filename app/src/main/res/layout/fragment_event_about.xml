<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="16dp"
    tools:context="webops.shaastra.iitm.shaastra2018.fragments.EventAboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_info"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:scrollbars="vertical"
            android:maxLines="18"
            android:text="@string/hello_blank_fragment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_round_heading"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:layout_below="@+id/tv_event_info"
            android:gravity="left"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="No of Rounds: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_round"
            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/tv_event_round_heading"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_alignTop="@+id/tv_event_round_heading"
            android:text="8"
            android:visibility="gone"
            android:layout_toRightOf="@+id/tv_event_round_heading" />


    </RelativeLayout>



</android.support.v7.widget.CardView>
