<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="webops.shaastra.iitm.shaastra2018.mainUI.InitialSplash">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="41dp"
        android:paddingTop="100dp">

        <TextView
            android:id="@+id/initSplashWelcomeTV"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WELCOME TO"
            android:textColor="#000428"
            android:textSize="35dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/initSplashShaastraTV"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SHAASTRA '18"
            android:textColor="#004e92"
            android:textSize="35dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="78dp" />

        <ImageView
            android:id="@+id/initSplashImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
